
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutTy.cshtml";
}
<div class="pcoded-inner-content">
    <div class="card">
        <div class="card-block">
            <h5>Danh Sách Thành Viên</h5>
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="#!">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Thành Viên</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Danh Sách</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <h2></h2>
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-block">
                        <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="col-sm-12">
                                <a class="btn btn-info" href="@Url.Action("Register", "Account", new { area = "" })">Thêm Thành Viên</a>
                                <hr />
                                <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                                    <thead>
                                        <tr>
                                            <th class="col-md-1" style="width:200px;">Email</th>
                                            <th>Quyền</th>
                                            <th>Xóa Thành Viên</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)

                {

                        <tr>
                            <td class="col-md-1" style="width:200px;">@item.Email</td>
                            <td>
                                <a href="@Url.Action("EditRole", "User",new { Id = item.Id})">
                                    <i class=" icofont icofont-edit-alt btn btn-success"> </i>
                                </a>
                            </td>
                            @if (item.Email != "Admin@gmail.com")
    {
                        <td>
                            <a href="@Url.Action("Delete", "User",new { Id = item.Id })">
                                <i class="icofont icofont-trash btn btn-danger"> </i>
                            </a>
                        </td>
}
else
{
                        <td></td>
}
                        </tr>
}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

