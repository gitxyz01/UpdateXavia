@model List<OnlineStore.Model.Context.ecom_Brands>
@{
    ViewBag.Title = "Index1";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutTy.cshtml";
}
<div class="pcoded-inner-content">
    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <h2></h2>
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <ul class="breadcrumb-title">
                                <li class="breadcrumb-item">
                                    <a href="/Admin/Home"> <i class="feather icon-home"></i> </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Danh Sách Thương Hiệu</a>
                                </li>
                            </ul>
                            <div style="margin-left: 650px;">
                                @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-grd-info" })
                            </div>
                        </div>
                    </div>
                    <div class="card-block">
                        <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="col-xs-12 col-sm-12">
                                <table id="table" class="table table-striped table-bordered nowrap dataTable" role="grid" aria-describedby="datatable_info">
                                    <thead>
                                        <tr>
                                            <th>
                                                Tên
                                            </th>
                                            <th>
                                                Mô Tả
                                            </th>
                                            <th>Trạng Thái</th>
                                            <th>Thao Tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </td>
                                                <td>
                                                    @if (item.Status == 1)
    {
                                                <label class="label label-success">Hoạt Động</label>
}
                                                    @if (item.Status == 0)
    {
                                                <label class=" label label-warning">Khóa</label>
}
                                                    @if (item.Status == 4)
    {
                                                <label class="label label-warning">Chờ Duyệt!</label>
}
                                                </td>
                                                <td class="center-text">
                                                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary icofont icofont-edit-alt" })
                                                    @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info icofont icofont-info" })
                                                    <a class="btn btn-grd-danger btn-sm icofont icofont-trash btn-Delete" data-id="@item.Id"></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title" id="resultDelete" style="font-size:1.25em;">
                </div>

            </div>

            <div class="modal-footer">
                <div>
                    <form action="@Url.Action("Delete", "Admin/product/delete",new { area="Admin"})" method="get" id="frm-Delete">
                        <input id="hidenId"
                               type="hidden"
                               name="id"
                               value="0" />
                        <button type="submit" class="btn btn-primary" id="submitDelete">
                            <i class="icofont icofont-trash">Xóa</i>
                        </button>
                    </form>
                </div>

                <button type="button" class="btn btn-default btn-reload" data-dismiss="modal" id="dismisModal">
                    Thoát
                </button>

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Areas/Admin/Scripts/brands.js"></script>

}

