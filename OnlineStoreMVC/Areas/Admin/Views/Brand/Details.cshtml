@model OnlineStore.Model.ViewModel.DetailsBrandManagementView

@{
    ViewBag.Title = "CHI TIẾT THƯƠNG HIỆU";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutTy.cshtml";
}


<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <h2></h2>
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/Admin/Home/NewLayout"> <i class="feather icon-home"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#!" class="label label-inverse-success">Chi tiết thương hiệu</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-block">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-md-3">TÊN</label>
                                    <span class="span-value-control col-md-9">@Model.Name</span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">MÔ TẢ</label>
                                    <span class="span-value-control col-md-9">@Model.Description</span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">TRẠNG THÁI</label>
                                    <span class="span-value-control col-md-9">@Model.Status</span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">TẠO BỞI</label>
                                    <span class="span-value-control col-md-9">@Model.CreatedBy</span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">NGÀY KHỞI TẠO</label>
                                    <span class="span-value-control col-md-9">@Model.CreatedDate</span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">THAY ĐỔI GẦN NHẤT BỞI</label>
                                    <span class="span-value-control col-md-9">@Model.ModifiedBy </span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">NGÀY THAY ĐỔI</label>
                                    <span class="span-value-control col-md-9">@Model.ModifiedDate </span>
                                </div>
                            </div>
                            <p>
                                @Html.ActionLink("TRỞ LẠI DANH SÁCH", "Index", null, new { @class = "btn btn-default" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
