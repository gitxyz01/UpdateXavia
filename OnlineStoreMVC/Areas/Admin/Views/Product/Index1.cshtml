@model List<OnlineStore.Model.ViewModel.ProductSummaryViewModel>
@{
    ViewBag.Title = "NewLayout";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutTy.cshtml";
}
<script src="~/Scripts/Admin/product-management.js"></script>
<div class="pcoded-inner-content">
    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">             
                <h2></h2>
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <ul class="breadcrumb-title">
                                <li class="breadcrumb-item">
                                    <a href="/Admin/Home/NewLayout"> <i class="feather icon-home"></i> </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Danh Sách Sản Phẩm</a>
                                </li>
                            </ul>
                            <div style="margin-left: 650px;">
                                @Html.ActionLink("Thêm Mới", "Create1", null, new { @class = "btn btn-primary btn-sm" })
                            </div>
                        </div>
                    </div>
                    <div class="card-block">
                        <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="col-xs-12 col-sm-12">
                                <table id="table" class="table table-striped table-bordered nowrap dataTable" role="grid" aria-describedby="datatable_info">
                                    <thead>
                                        <tr>
                                            <th >
                                                Mã
                                            </th>
                                            <th>
                                                Tên
                                            </th>
                                            <th>
                                                Đơn Giá
                                            </th>
                                            <th>
                                                Ảnh
                                            </th>
                                            <th>
                                                Thứ Tự
                                            </th>
                                            <th>
                                                Trạng Thái
                                            </th>
                                            <th>Sửa</th>
                                            <th>Xóa</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @if (item.CoverImage != null)
                            {
                                <img src="@item.CoverImage.ImagePath" height="70" width="70" alt="ảnh không tồn tại" />
                }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SortOrder)
                                    </td>
                                    <td>
                                        @if (item.Status == "Đang hoạt động")
                            {
                                <label class="label label-success">Hoạt Động</label>
                }
                else
                {
                    <label class=" label label-warning">Khóa</label>
    }
                                    </td>
                                    <td class="center-text">

                                        @Html.ActionLink(" ", "Edit1", new { id = item.Id }, new { @class = "btn btn-primary btn-mini icofont icofont-edit-alt" })
                                    </td>
                                    <td class="center-text">

                                        <a class="btn btn-warning btn-mini icofont icofont-trash btn-Delete" data-id="@item.Id"></a>
                                    </td>
                                </tr>
                }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
