@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutTy.cshtml";
}
<div class="pcoded-inner-content">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Thêm Mới</h4>

                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item">
                            <a href="#"> <i class="feather icon-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Phân Quyền</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Danh Sách</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <h2></h2>
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-block">
                        <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="col-sm-12">
                                @using (Html.BeginForm("Create", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
        {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <label for="Id">Mã Quyền</label>
                            @Html.TextBoxFor(m => m.Id, new { id = "Id", @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            <label for="Name">Tên Quyền</label>
                            @Html.TextBoxFor(m => m.Name, new { id = "Name", @class = "form-control", required = "required" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Thêm Quyền</button>
                            <button type="reset" class="btn btn-default">Hủy</button>
                        </div>
}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


