@using Microsoft.AspNet.Identity.EntityFramework;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutTy.cshtml";
}
<div class="pcoded-inner-content">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Danh Sách Quyền</h4>
                        
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item">
                            <a href="#"> <i class="feather icon-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Phân Quyền</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Danh Sách</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <h2></h2>
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-block">
                        <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="col-sm-12">

                                @Html.ActionLink("Tạo Quyền", "Create", null, new { @class = "btn btn-info" })

                                <br /><br />

                                <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">

                                    <thead>

                                        <tr>

                                            <th>ID</th>

                                            <th>Tên quyền</th>

                                            <th>Xóa</th>

                                        </tr>

                                    </thead>

                                    <tbody>

                                        @foreach (var item in Model)

                                        {

                                            <tr>

                                                <td>@item.Id</td>

                                                <td>@item.Name</td>
                                                @if (item.Name == "Admin" ||
item.Name == "Đọc" ||
item.Name == "Thêm" ||
item.Name == "Sửa" ||
item.Name == "Xóa"
)
                                                {
                                                    <td>

                                                        <i class=" btn btn-danger icofont icofont-trash"> </i>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        <a href="@Url.Action("Delete", "Role",new { Id = item.Id })">
                                                            <i class=" btn btn-danger icofont icofont-trash"> </i>
                                                        </a>
                                                    </td>
                                                }
                                            </tr>

                                        }

                                    </tbody>

                                </table>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



