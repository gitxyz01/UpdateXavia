@using Microsoft.AspNet.Identity.EntityFramework;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutTy.cshtml";
}
<div class="pcoded-inner-content">

    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <h2></h2>
                <div class="card">
                    <div class="card-header">
                        <div class="page-header">
                            <div class="row align-items-end">
                                <div>
                                    <div class="page-header-breadcrumb">
                                        <ul class="breadcrumb-title">
                                            <li class="breadcrumb-item">
                                                <a href="#"> <i class="feather icon-home"></i> </a>
                                            </li>
                                            <li class="breadcrumb-item">
                                                <a href="#!">Phân Quyền</a>
                                            </li>
                                            <li class="breadcrumb-item">
                                                <a href="#!">Danh Sách</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-block">
                        <div id="simpletable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="col-sm-12">

                                @Html.ActionLink("Tạo Quyền", "Create", null, new { @class = "btn btn-info" })

                                <br /><br />

                                <table id="table" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">

                                    <thead>

                                        <tr>

                                            <th>Mã Quyền</th>

                                            <th>Tên quyền</th>

                                            <th>Xóa</th>

                                        </tr>

                                    </thead>

                                    <tbody>

                                        @foreach (var item in Model)

                                        {

                                            <tr>

                                                <td><label class="label label-primary">@item.Id</label>   </td>

                                                <td>@item.Name</td>
                                                @if (item.Name == "Administrator" ||
item.Name == "Xem" ||
item.Name == "Thêm" ||
item.Name == "Sửa" ||
item.Name == "Xóa" ||
item.Name == "Xem Đơn Hàng" ||
item.Name == "Cập Nhật Đơn Hàng" ||
item.Name == "Xóa Đơn Hàng"||
item.Name == "Xem Danh Sách Khách Hàng"


)
                                                {
                                                    <td>

                                                        <i class="btn btn-grd-primary icofont icofont-shield"> </i>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        <a href="@Url.Action("Delete", "Role",new { Id = item.Id })">
                                                            <i class=" btn btn-danger icofont icofont-trash"> </i>
                                                        </a>
                                                    </td>
                                                }
                                            </tr>

                                        }

                                    </tbody>

                                </table>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        var table = $("#table").DataTable({

            "searching": true,
            "ordering": true,
            dom: "Blfrtip",
            buttons: [
            {
                extend: "csv",
                className: "btn-sm",
                text: "Excel"
            },
            {
                extend: "pdf",
                className: "btn-sm"
            },
            ],
            "pagingType": "full_numbers",
            destroy: true,

            responsive: true,
            columnDefs: [

                { responsivePriority: 2, targets: -1 },
                 { responsivePriority: 3, targets: -2 },

            ],

            "language": {
                "lengthMenu": "Hiển Thị _MENU_ Bản Ghi Trên Trang",
                "search": "Tìm Kiếm:",
                "info": "Hiển Thị _START_ Tới _END_ Của _TOTAL_ Bản Ghi",
                "paginate": {
                    "first": "Đầu",
                    "last": "Cuối",
                    "next": "Tới",
                    "previous": "Lui"
                },
                "zeroRecords": "Không Có Bản Ghi Nào Được Tìm Thấy",
                "infoEmpty": "Không Có Bản Ghi Nào Hiển Thị",
                "infoFiltered": "(Trong Tổng Cộng _MAX_ Bản Ghi)",
            },
        });
    </script>
}


