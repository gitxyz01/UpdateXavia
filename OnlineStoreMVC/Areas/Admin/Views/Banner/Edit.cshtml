@model OnlineStore.Model.ViewModel.BannerViewModel
@{
    ViewBag.Title = "Cập nhật banner";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutTy.cshtml";
}
<link href="~/Content/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" />
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <h2></h2>
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/Admin/Home"> <i class="feather icon-home"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#!">Cập Nhật Banner</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-block">
                    @using (Html.BeginForm("Edit", "Banner", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.ImageId)

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <label class="control-label col-md-2" for="Name">Tên banner</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="ImageBanner">Ảnh banner</label>
                                <div class="col-md-10">
                                    <img src="@(Model.ImagePath)" />
                                    <input type="file" id="ImageBanner" name="uploadFile" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="SortOrder">Loại</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("Type", ViewBag.BannerTypes as SelectList, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="SortOrder">Thời hạn <small>(Chỉ dùng cho loại Popup)</small></label>
                                <div class="col-md-10 input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @Html.EditorFor(model => model.StartEndDate, new { htmlAttributes = new { @class = "form-control pull-right", @id = "txtStartEndDate" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="SortOrder">Thứ tự</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SortOrder, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SortOrder, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="Status">Tình trạng</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("Status", ViewBag.Status as SelectList, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12" style="display:flex; justify-content:center">

                                    @Html.ActionLink("Quay lại danh sách", "Index", "Banner", null, new { @class = "btn btn-grd-inverse" })
                                    <input style="margin-left:20px;" type="submit" value="Cập nhật" class="btn btn-grd-info" />
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>

</div>
@section scripts{
    <script src="~/Content/plugins/daterangepicker/daterangepicker.js"></script>
    <script>
    $(function () {
        //Date range picker
        $('#txtStartEndDate').daterangepicker({ format: 'DD/MM/YYYY' });
    });
    </script>
}


