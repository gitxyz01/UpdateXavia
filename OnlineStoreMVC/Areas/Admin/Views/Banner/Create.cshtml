@model OnlineStore.Model.ViewModel.BannerViewModel
@{
    ViewBag.Title = "Tạo mới banner";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutTy.cshtml";
}
<link href="~/Content/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" />
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <h2></h2>
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/Admin/Home/NewLayout"> <i class="feather icon-home"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#!">Thêm Mới Sản Phẩm</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-block">
                    @using (Html.BeginForm("Create", "Banner", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <label class="control-label col-md-2" for="Name">Tên banner</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="ImageBanner">Ảnh banner</label>
                                <div class="col-md-10">
                                    <input type="file" id="ImageBanner" name="uploadFile" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="Type">Loại</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("Type", ViewBag.Type as SelectList, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="SortOrder">Thời hạn <small>(Chỉ dùng cho loại Popup)</small></label>
                                <div class="col-md-10 input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @Html.EditorFor(model => model.StartEndDate, new { htmlAttributes = new { @class = "form-control pull-right", @id = "txtStartEndDate" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="SortOrder">Thứ tự</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SortOrder, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SortOrder, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                                    @Html.ActionLink("Quay lại danh sách", "Index", "Banner", null, new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
@section scripts{
    <script src="~/Content/plugins/daterangepicker/daterangepicker.js"></script>
    <script>
    $(function () {
        //Date range picker
        $('#txtStartEndDate').daterangepicker({ format: 'DD/MM/YYYY' });
    });
    </script>
}

